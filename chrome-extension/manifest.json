{
  "manifest_version": 3,
  "name": "CI/CD Dashboard",
  "version": "1.0",
  "description": "Adds a CI/CD tab to GitHub repo pages linking to your custom dashboard.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}