{
  "manifest_version": 3,
  "name": "GHAMiner Dashboard",
  "version": "1.0",
  "description": "Adds a Dashboard tab to GitHub repo pages linking to your custom dashboard.",
  "permissions": ["scripting"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bundle.js", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}